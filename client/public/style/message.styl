#message 
    position absolute
    z-index 9999
    top 20%
    left 40%
    padding 10px
    height 150px
    background #222
    width 250px
    border 1px solid #777
    display none
    .top 
        height 80%
        background #444
        padding 10px
    .bottom
        padding-top 7px
        height 20%
        input
            width 50px
            box-shadow 1px 1px 1px 0px #555 
        .no
            margin-left 10px
            background #a90329
            background -moz-linear-gradient(top,  #a90329 0%, #8f0222 44%, #6d0019 100%)
            background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#a90329), color-stop(44%,#8f0222), color-stop(100%,#6d0019))
            background -webkit-linear-gradient(top,  #a90329 0%,#8f0222 44%,#6d0019 100%)
            background -o-linear-gradient(top,  #a90329 0%,#8f0222 44%,#6d0019 100%)
            background -ms-linear-gradient(top,  #a90329 0%,#8f0222 44%,#6d0019 100%)
            background linear-gradient(to bottom,  #a90329 0%,#8f0222 44%,#6d0019 100%)
            border 1px solid black
            color white
        .yes
            background -moz-linear-gradient(top,  #7abcff 0%, #60abf8 44%, #396cd3 100%)
            background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#7abcff), color-stop(44%,#60abf8), color-stop(100%,#396cd3))
            background -webkit-linear-gradient(top,  #7abcff 0%,#60abf8 44%,#396cd3 100%)
            background -o-linear-gradient(top,  #7abcff 0%,#60abf8 44%,#396cd3 100%)
            background -ms-linear-gradient(top,  #7abcff 0%,#60abf8 44%,#396cd3 100%)
            background linear-gradient(to bottom,  #7abcff 0%,#60abf8 44%,#396cd3 100%)
            border 1px solid black
            color white