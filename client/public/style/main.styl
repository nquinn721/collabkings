	box-sizing border-box
pre
	margin 0
body, html
	margin 0
	padding 0
	height 100%

.none
	display none
border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments
no-select()
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none

