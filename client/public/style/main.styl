*
	box-sizing border-box
	
pre
	margin 0
body, html
	margin 0
	padding 0
	height 100%


.none
	display none
border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments
no-select()
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none

@import "chat.styl"
@import "projects.styl"
@import "header.styl"


.code-area
	width 80%
	height 100%
	display block
	position absolute
	padding 0
	padding-top 50px
	overflow hidden
	top 0
	overflow-y auto
	> code 
		
		border-top 1px solid #777
		width 97%
		padding-left 10px

.numbers{
    display: inline-block;
	border-top 1px solid #777
    vertical-align: top;
    width: 3%;
    text-align: center;
    border-right: 1px solid #999;
    color:#999;
    padding-top:8px;
}

.editor {
    display: inline-block;
    width: 97%;
}



/**** Login ***/
.login {
    position: absolute;
	top: 0;
	color: white;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.4);
	z-index: 9999;
}

.login form {
    width: 400px;
	text-align: center;
	background: #9D3B3B;
	margin: auto;
	height: 150px;
	padding: 50px;
	-webkit-border-radius: 20px;
	-moz-border-radius: 20px;
	border-radius: 20px;
	margin-top: 20%;
}

input.username {
    border: 1px solid #999;
    border-radius: 5px;
    padding: 5px;
}

input.username-picked {
    border: 1px solid #999;
    border-radius: 5px;
    padding: 5px;
    margin-left: 5px;
}

