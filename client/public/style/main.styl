/**** Login ***/
.login {
    position: absolute;
	top: 0;
	color: white;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.4);
	z-index: 9999;
}

.login form {
    width: 400px;
	text-align: center;
	background: #9D3B3B;
	margin: auto;
	height: 150px;
	padding: 50px;
	-webkit-border-radius: 20px;
	-moz-border-radius: 20px;
	border-radius: 20px;
	margin-top: 20%;
}

input.username {
    border: 1px solid #999;
    border-radius: 5px;
    padding: 5px;
}

input.username-picked {
    border: 1px solid #999;
    border-radius: 5px;
    padding: 5px;
    margin-left: 5px;
}

