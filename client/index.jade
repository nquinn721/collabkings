include includes/header

block content
	.row
	.context-menu.context
	.create-file
		.top Create File
		.bottom: input
	.login
		form Pick a username
			br
			input.username
			input(type="submit", value="Start", class="username-picked")
	.header
		.logo CollabKings
		.editor-options
			.theme
				select
					option(value="monokai_sublime.css") Monokai
					- for(i in styles)
						- if(styles[i] == 'monokai_sublime.css' || styles[i] == 'monokai.css')continue;
						- var style = styles[i].split('.')[0];
						- var name = style.substr(0,1).toUpperCase() + style.substr(1);
						- if(name.indexOf('_') > -1)
							- name = name.split('_').join(' ')
						option(value="#{styles[i]}") #{name}
			//- .language
			//- 	select
			//- 		option Javascript
			//- 		option HTML
			//- 		option CSS
	.projects
		.project-area
			.collaborators
				.collab-head Collaborators
				.collab-body
			.file-manager
				.folder-context.context
					.createFolder Create Folder
					.createFile Create File
					.moveFolder Move
					.deleteFolder Delete
					.renameFolder Rename
				.file-context.context
					.moveFile Move
					.deleteFile Delete
					.renameFile Rename
				.file-head Projects
				.file-body
			.shared-files
				.shared-head Shared Files
				.shared-body
	.javascriptEditor
		pre.code-area.hljs#editor1
			.numbers
			code.editor(tabindex="0", class="javascript")
			
	.chat
		.chat-header
			.username-area
			.quick-msg
			.options
		.chat-body
			.chat-msg-area: div
			.chat-msg-type
				input.chat-msg(type="text")
		.chat-users
include includes/footer
